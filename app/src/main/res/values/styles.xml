<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_800</item>
        <item name="colorPrimaryDark">@color/blue_900</item>
        <item name="colorAccent">@color/pink_500</item>
    </style>
    <style name="DetailActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_800</item>
        <item name="colorPrimaryDark">@color/blue_900</item>
        <item name="colorAccent">@color/pink_500</item>
        <!-- center text vertically with calendar icon for release date; More space between lines in overview/review -->
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">6dp</item>
    </style>
    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <!-- CardView -->
    <style name="CardStyle">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="contentPaddingTop">@dimen/vertical_margin</item>
        <item name="contentPaddingBottom">@dimen/vertical_margin</item>
        <item name="contentPaddingLeft">@dimen/horizontal_margin</item>
        <item name="contentPaddingRight">@dimen/horizontal_margin</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:layout_marginLeft">@dimen/card_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/card_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/card_bottom_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="CardContentContainerStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/card_container_bottom_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Section Label -->
    <style name="LabelStyle">
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
